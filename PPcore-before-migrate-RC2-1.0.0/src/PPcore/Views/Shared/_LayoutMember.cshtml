                        type: 'get', url: '@Url.Action("Edit", "products")' + '?product_code=' + data[1],
                    }).done(function (resp) {
                        $('#mem_productProductEditModalRenderBody').html(resp);
                        $('#mem_productProductEditModalLabel').text('แก้ไขผลิตผลที่ต้องการ');
